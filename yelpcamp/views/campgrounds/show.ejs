<%- include ("../partials/header") %>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">yelpcamp</p>
                <div class="list-group">
                    <li class="list-group-item active">info</li>
                    <li class="list-group-item">info</li>
                    <li class="list-group-item">info</li>
                </div>
            </div>
            <div class="col-md-9">
                <div class="thumbnail">
                    <img class="image-resposive" src="<%= campground1.image %>">
                    <div class="caption-full">
                        <h4 class="pull-right">$29</h4>
                        <h4>
                            <a>
                                <%= campground1.name %>
                            </a>
                        </h4>
                        <p>
                            <%=campground1.description %>
                        </p>
                        <p> <em>By,</em>
                            <%= campground1.author.username %>
                        </p>

                        <% if(currentUser && campground1.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-warning" href="/campground/<%= campground1._id %>/edit">Edit</a>
                            <form id="delete" action="/campground/<%= campground1._id %>?_method=DELETE" method="post">
                                <button class="btn btn-danger">DELETE</button>
                            </form>
                            <% } %>
                    </div>
                </div>
                <div class="well">
                    <div class="text-right">
                        <a class="btn btn-success" href="/campground/<%= campground1._id %>/comments/new">Add New Comment</a>
                    </div>
                    <hr>
                    <% campground1.comments.forEach(function(comment){%>
                        <div class="row">
                            <div class="col-md-12">
                                <strong> <%= comment.author.username %>: </strong>
                                <span class="pull-right">10 dayyys ago</span>
                                <p>
                                    <%=comment.text %>
                                </p>
                                <%})%>
                            </div>
                        </div>
                </div>
            </div>
        </div>

    </div>
    <%- include ("../partials/footer") %>